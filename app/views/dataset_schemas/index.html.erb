<h1 class="page-header">Dataset Schemas</h1>

<% if @dataset_schemas.any? %>
  <table class="table">
    <tr>
      <th>Owner</th>
      <th>Name</th>
      <th>Link</th>
    </tr>
    <% @dataset_schemas.each do |dataset_schema| %>
      <tr>
        <td><%= dataset_schema.user.name %></td>
        <td><%= dataset_schema.name %></td>
        <td></td>
      </tr>
    <% end %>

  </table>
<% else %>
  <p class='text-center lead'>You currently have no dataset schemas</p>
<% end %>

<div class="text-center">
  <%= will_paginate @dataset_schemas, renderer: BootstrapPagination::Rails %>
</div>