<div class="row title-dataset">
  <div class="col-md-3">
    <h2>Model:</h2>
  </div>
</div>
<div class="box-dataset">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th class="col-md-2">Name</th>
						<th class="col-md-3">Description</th>
						<th class="col-md-1">Data type</th>
						<th class="col-md-1">Required?</th>
						<th class="col-md-1">Unique?</th>
						<th class="col-md-3">Value Constraints</th>
					</tr>
				</thead>
				<tbody>
					<% @model.model_schema_fields.each do |model_field| %>
					<tr>
						<td><%= model_field.name %></td>
						<td><%= model_field.description %></td>
						<td><%= model_field.type %></td>
						<td><%= model_field.model_schema_constraint.required %></td>
						<td><%= model_field.model_schema_constraint.unique %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>