<div class="row">
  <div class="col-sm-4">
    <%= render "wizard_sidebar" %>
  </div>
	<div class="col-sm-8">
		<div id="add-dataset-form-container">
			<%= form_for @model, url: {action: "create"} do |f| %>
			<div id="step-one">
				<div class="form-group">
					Name: <%= f.text_field :name, class: "form-control" %><br />
				</div>
				<div class="form-group">
					Description: <%= f.text_field :description, class: "form-control" %><br />
				</div>
				<div class="form-group">
					<%= f.submit 'Create', :class => "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
