<div class="row">
	<div class="col-sm-4">
		<%= render "wizard_sidebar" %>
	</div>

	<div class="col-sm-5 col-md-offset-1">

		<%= form_tag(url, method: method) do %>

		<div id="step-one">
			<%= hidden_field_tag "model[user_id]", value = user_id %>
			<div class="form-group">
				<label for="model[name]">Model name</label>
				<%= text_field_tag "model[name]", model.name, placeholder: t(:'model.name'), class: "form-control" %>
			</div>
			<div class="form-group">
				<label for="model[description]">Model description</label>
				<%= text_area_tag "model[description]", model.description, placeholder: t(:'model.description'), class: "form-control" %>
			</div>
			<div class="form-group">
				<label for="model[owner]">Organization?</label>
				<%= select_tag "model[owner]", options_for_select(organization_select_options), { label: t(:'model.owner'), class: "form-control selectpicker show-tick" } %>
			</div>
			<a href="#" class="show-step-two btn btn-secondary pull-right">Next: Add a licence</a>
		</div>

		<div id="step-two">
			<div class="form-group pull-right">
				<%= submit_tag "Create" %>
				<% end %>
			</div>
		</div>

	</div>
</div>