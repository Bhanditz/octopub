<div class="model-input-group">
	<div class="form-group">
		<label for="model_schema_fields[][name]">Field name</label>
		<%= text_field_tag "model_schema_fields[][name]", model_schema_field.name, placeholder: t(:'model_schema_field.name'), :class => "form-control" %>
	</div>
	<div class="form-group">
		<label for="model_schema_fields[][description]">Field description</label>
		<%= text_area_tag "model_schema_fields[][description]", model_schema_field.description, placeholder: t(:'model_schema_field.description'), :class => "form-control" %>
	</div>
	<div class="form-group">
		<label for="model_schema_fields[][type]">Field type</label>
		<%= select_tag("model_schema_fields[][type]", options_for_select(ModelSchemaField.types.map {|type_name, type_integer| [type_name.titleize, type_name]}), :class => "form-control" ) %>
	</div>
	<%= hidden_field_tag "model_schema_fields[][id]", model_schema_field.id %>
	<div id="constraint_fields" class="constraint_fields">
		<%= render partial: "model_schema_constraints/new_form", locals: { model_schema_constraint: ModelSchemaConstraint.new } %>
	</div>
	<div class="form-group">
		<b>Saved Constraints</b>
		<table class="table table-bordered table-condensed">
			<tbody>
				<tr>
					<td>Testing</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>