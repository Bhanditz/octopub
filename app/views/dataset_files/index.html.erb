<a href="#">Back to all collections</a>
<div class="row">
  <div class="col-md-7">
    <h1><%= @dataset.name %></h1>
  </div>
  <div class="col-md-5">
    <%= link_to "View on Github", @dataset.github_url, target: "_blank", rel: "alternate",:class => "btn btn-default" %>
    <%= link_to "Download Datapackage", @dataset.github_url + '/datapackage.json', target: "_blank", rel: "alternate",:class => "btn btn-default" %>
  </div>
</div>

<div style="background-color: white; padding: 15px;">
  <div class="row">
    <div class="col-md-2">
      <strong>Created by:</strong>
    </div>
    <div class="col-md-6">
      <%= @dataset.owner %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>Licence:</strong>
    </div>
    <div class="col-md-6">
      <%= @dataset.license %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>Collection description:</strong>
    </div>
    <div class="col-md-6">
      <%= @dataset.description %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>Publication frequency:</strong>
    </div>
    <div class="col-md-6">
      <%= @dataset.frequency %>
      <%= link_to "Subscribe to changes", @dataset.github_url + '/commits/gh-pages.atom', target: "_blank", rel: "alternate" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <strong>Status:</strong>
    </div>
    <div class="col-md-6">
      <% if @dataset.published_status %>
        <p>Published</p>
      <% else %>
        <p>Pre-published</p>
        <button class="btn btn-default">Publish data collection</button>
      <% end %>
    </div>
  </div>
</div>

<h1>Files</h1>
<div class="" style="background-color: white; padding: 15px;">
  <% if @dataset_files.exists? %>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Schema</th>
          <th>Creation date</th>
          <th>Validation</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @dataset_files.each do |file| %>
          <tr>
            <td><%= file.title %></td>
            <td><%= file.dataset_file_schema.name if file.dataset_file_schema %></td>
            <td><%= file.created_at %></td>
            <td><a href="https://csvlint.io/?uri=<%= @dataset.gh_pages_url %>/data/<%= file.filename %>"><img src="https://csvlint.io/?uri=<%= @dataset.gh_pages_url %>/data/<%= file.filename %>&format=svg" alt="CSVlint validation result" /></a></td>
            <td>...</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<h1>Schemas</h1>
<div class="" style="background-color: white; padding: 15px;">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Publisher</th>
        <th>Format</th>
        <th>Created on</th>
        <th>Type</th>
        <th>Files</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @dataset_files.each do |file| %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td>...</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="">
  <h1>Support</h1>
  <p>If you have support queries, suggestions or corrections to the data, please file a new issue in our Github repository.<br>
  All comments and subsequent fixes will be logged openly such that you can easily see the provenance of each object in this dataset</p>
</div>
