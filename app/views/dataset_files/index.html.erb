<% if flash[:success] %>
	<div class="alert alert-success alert-dismissible" role="alert">
		<%= flash[:success] %>
		<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	</div>
<% end %>

<div class="home-box-dashboard">
  <%= link_to "< Back to all collections", main_app.user_datasets_path(current_user) %>
  <div class="row">
		<div class="head-dataset">
			<div class="col-md-3">
				<h2><span class="fa fa-folder-open"></span><%= @dataset.name %></h2>
			</div>
			<div class="col-md-9">
				<% if !@dataset.published_status %>
					<%= bs_button_to "Publish data collection", request.original_url + '/publish_dataset', rel: "alternate",:class => "btn btn-primary pull-right" %>
				<% end %>
				<%= bs_button_to "Download data package", @dataset.gh_pages_url + '/datapackage.json', target: "_blank", rel: "alternate",:class => "btn btn-tertiary pull-right" %>
				<% if !@dataset.published_status %>
					<%= bs_button_to "View on Github", @dataset.github_url, target: "_blank", rel: "alternate",:class => "btn btn-tertiary disabled pull-right" %>
				<% else %>
					<%= bs_button_to "View on Github", @dataset.github_url, target: "_blank", rel: "alternate",:class => "btn btn-tertiary pull-right" %>
				<% end %>
			</div>
		</div>
  </div>
  <%= render(partial: "dataset")  %>
  <%= render(partial: "dataset-files")  %>
  <%= render(partial: "dataset-schemas")  %>
  <div class="title-dataset">
    <h2>Support:</h2>
  </div>
  <div class="row">
    <div class="col-md-10">
      <p>If you have support queries, suggestions or corrections to the data, please <%= link_to "file a new issue", @dataset.github_url + '/issues' %> in our Github repository.<br>
      All comments and subsequent fixes will be <%= link_to "logged openly", @dataset.github_url + '/issues' %> such that you can easily see the provenance of each object in this dataset</p>
    </div>
  </div>
</div>
